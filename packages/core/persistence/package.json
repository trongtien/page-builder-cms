{
    "name": "@page-builder/persistence",
    "version": "0.0.1",
    "private": true,
    "description": "Database persistence layer with Prisma and PostgreSQL connection pooling",
    "type": "module",
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        },
        "./postgres": {
            "types": "./dist/postgres/client.d.ts",
            "import": "./dist/postgres/client.js"
        }
    },
    "scripts": {
        "build": "pnpm prisma:generate && tsup",
        "dev": "pnpm prisma:generate && tsup --watch",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "type-check": "tsc --noEmit",
        "test": "vitest",
        "test:run": "vitest run",
        "test:coverage": "vitest run --coverage",
        "clean": "rm -rf dist",
        "prisma:generate": "prisma generate",
        "prisma:migrate:dev": "prisma migrate dev",
        "prisma:migrate:deploy": "prisma migrate deploy",
        "prisma:migrate:reset": "prisma migrate reset",
        "prisma:studio": "prisma studio",
        "prisma:format": "prisma format"
    },
    "dependencies": {
        "@prisma/client": "^7.0.1"
    },
    "devDependencies": {
        "@page-builder/config-eslint": "workspace:*",
        "@page-builder/config-tsconfig": "workspace:*",
        "@page-builder/config-tsup": "workspace:*",
        "@page-builder/config-vitest": "workspace:*",
        "prisma": "^7.0.1"
    }
}
