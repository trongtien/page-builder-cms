{
    "name": "@page-builder/persistence",
    "version": "0.0.1",
    "private": true,
    "description": "Database persistence layer with Knex.js and PostgreSQL connection pooling",
    "type": "module",
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        },
        "./postgres": {
            "types": "./dist/postgres/client.d.ts",
            "import": "./dist/postgres/client.js"
        }
    },
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "type-check": "tsc --noEmit",
        "test": "vitest",
        "test:run": "vitest run",
        "test:coverage": "vitest run --coverage",
        "clean": "rm -rf dist",
        "migrate:latest": "knex migrate:latest",
        "migrate:rollback": "knex migrate:rollback",
        "migrate:make": "knex migrate:make",
        "seed:run": "knex seed:run"
    },
    "dependencies": {
        "knex": "^3.1.0",
        "pg": "^8.16.3",
        "winston": "^3.17.0"
    },
    "devDependencies": {
        "@page-builder/config-eslint": "workspace:*",
        "@page-builder/config-tsconfig": "workspace:*",
        "@page-builder/config-tsup": "workspace:*",
        "@page-builder/config-vitest": "workspace:*",
        "@types/pg": "^8.16.0"
    }
}
