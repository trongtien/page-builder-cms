{
    "name": "@page-builder/core-ui",
    "version": "1.0.0",
    "private": true,
    "description": "Shared UI components",
    "type": "module",
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
