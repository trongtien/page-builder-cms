{
    "name": "@page-builder/core-ui",
    "version": "1.0.0",
    "private": true,
    "description": "Shared UI components",
    "type": "module",
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        },
        "./dist/index.css": "./dist/index.css",
        "./tailwind.config": "./tailwind.config.ts"
