{
    "name": "@page-builder/core-ui",
    "version": "1.0.0",
    "private": true,
    "description": "Shared UI components",
    "type": "module",
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        },
        "./dist/index.css": "./dist/index.css",
        "./tailwind.config": "./tailwind.config.ts"
    },
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier --write \"src/**/*.{ts,tsx}\"",
        "format:check": "prettier --check \"src/**/*.{ts,tsx}\"",
        "type-check": "tsc --noEmit",
        "clean": "rm -rf dist"
    },
    "dependencies": {
        "@floating-ui/react": "^0.27.16",
        "@radix-ui/react-slot": "^1.2.3",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "lucide-react": "^0.460.0",
        "react": "catalog:"
    },
    "devDependencies": {
        "@page-builder/config-eslint": "workspace:*",
        "@page-builder/config-tailwind": "workspace:*",
        "@page-builder/config-tsconfig": "workspace:*",
        "@tailwindcss/postcss": "catalog:",
        "@types/react": "catalog:",
        "autoprefixer": "catalog:",
        "postcss": "catalog:",
        "tailwindcss": "catalog:",
        "tailwindcss-animate": "^1.0.7",
        "tsup": "catalog:",
        "typescript": "catalog:"
    },
    "peerDependencies": {
        "react": "catalog:"
    }
}
