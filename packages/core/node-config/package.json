{
    "name": "@page-builder/node-config",
    "version": "0.1.0",
    "description": "Centralized configuration management for page-builder-cms monorepo",
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist",
        "README.md"
    ],
    "scripts": {
        "build": "tsc --project tsconfig.build.json",
        "dev": "tsc --watch --project tsconfig.build.json",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "lint": "eslint src",
        "type-check": "tsc --noEmit"
    },
    "keywords": [
        "config",
        "configuration",
        "environment",
        "node",
        "typescript",
        "dotenv"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "dotenv": "^16.0.0"
    },
    "devDependencies": {
        "@types/jest": "^29.5.0",
        "@types/node": "^20.0.0",
        "eslint": "^9.0.0",
        "jest": "^29.5.0",
        "ts-jest": "^29.1.0",
        "typescript": "^5.0.0",
        "typescript-eslint": "^8.0.0"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/test"
        ],
        "testMatch": [
            "**/*.test.ts"
        ],
        "collectCoverageFrom": [
            "src/**/*.ts",
            "!src/**/*.test.ts",
            "!src/types/**"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 100,
                "functions": 100,
                "lines": 100,
                "statements": 100
            }
        },
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ]
    }
}
