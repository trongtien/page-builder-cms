    },
    "devDependencies": {
        "@page-builder/config-eslint": "workspace:*",
        "@page-builder/config-tsconfig": "workspace:*",
        "@types/node": "catalog:",
        "@types/react": "catalog:",
        "tsup": "catalog:",
        "typescript": "catalog:"
